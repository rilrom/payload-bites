{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "PAYLOAD_SECRET",
    "DATABASE_URI",
    "API_KEY_UNSPLASH",
    "API_KEY_PEXELS"
  ],
  "tasks": {
    "clean": {
      "cache": false,
      "dependsOn": ["^clean"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
