    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.4",
    "copyfiles": "^2.4.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.2"
  },
  "resolutions": {
    "react": "^19",
    "react-dom": "^19"
  },
  "pnpm": {
    "patchedDependencies": {
      "@payloadcms/next": "patches/@payloadcms__next.patch"
    }
  },
  "engines": {
    "node": "^20"
  },
  "packageManager": "pnpm@9.12.2"
}
