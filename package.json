{
  "name": "payload-bites",
  "description": "collection of various bited-sized Payload v3 plugins and tools",
  "author": "Riley Langbein <rilrom-dev@protonmail.com>",
  "repository": "https://github.com/rilrom/payload-bites",
  "bugs": "https://github.com/rilrom/payload-bites/issues",
  "homepage": "https://github.com/rilrom/payload-bites#readme",
  "keywords": [
    "payload",
    "payloadcms",
    "payload-plugin"
  ],
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "tsc": "turbo tsc",
    "generate:types": "turbo generate:types",
    "generate:importmap": "turbo generate:importmap",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \".next\" -o -name \".turbo\" -name \".astro\" -o -name \"dist\" \\) -prune -exec rm -rf {} +"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.5",
    "chokidar": "^4.0.3",
    "copyfiles": "^2.4.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@payloadcms/db-postgres": "3.68.5",
      "@payloadcms/next": "3.68.5",
      "@payloadcms/plugin-nested-docs": "3.68.5",
      "@payloadcms/richtext-lexical": "3.68.5",
      "@payloadcms/translations": "3.68.5",
      "@payloadcms/ui": "3.68.5",
      "esbuild": "^0.25.0",
      "next": "15.4.10",
      "payload": "3.68.5",
      "react": "^19.2.3",
      "react-dom": "^19.2.3"
    }
  },
  "engines": {
    "node": ">=22",
    "pnpm": "^10.19.0"
  },
  "packageManager": "pnpm@10.23.0"
}
