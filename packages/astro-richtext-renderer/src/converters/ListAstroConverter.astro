---
import type { SerializedListNode } from "@payloadcms/richtext-lexical";
import type { AstroConverterProps } from "../types";

type Props = AstroConverterProps<SerializedListNode>;

const { node, converters, config, style, RenderNode } = Astro.props;

const children = node.children || [];

const Tag = node.listType === "number" ? "ol" : "ul";
---

<Tag style={style}>
  {
    children.map((child) => (
      <RenderNode node={child} converters={converters} config={config} />
    ))
  }
</Tag>
