---
import type { SerializedTableCellNode } from "@payloadcms/richtext-lexical";
import type { AstroConverterProps } from "../types";

type Props = AstroConverterProps<SerializedTableCellNode>;

const { node, converters, config, style, RenderNode } = Astro.props;

const children = node.children || [];

const Tag = node.headerState > 0 ? "th" : "td";
---

<Tag style={style}>
  {
    children.map((child) => (
      <RenderNode node={child} converters={converters} config={config} />
    ))
  }
</Tag>
