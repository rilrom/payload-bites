---
interface Props {
  node: {
    fields: {
      id: string;
      blockType: "mention";
      userId: string;
      username: string;
      displayName?: string;
    };
  };
}

const { node } = Astro.props;

const { username, displayName } = node.fields;
---

<span class="mention">@{displayName || username}</span>

<style>
  .mention {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    background: #e3f2fd;
    color: #1976d2;
    border-radius: 0.25rem;
    font-weight: 500;
    font-size: 0.9em;
  }
</style>
