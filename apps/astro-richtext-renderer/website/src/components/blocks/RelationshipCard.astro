---
interface Props {
	node: {
		fields: {
			id: string;
			blockType: "relationshipCard";
			relationTo: string;
			value: {
				id: string;
				title: string;
				slug?: string;
				excerpt?: string;
				featuredImage?: {
					url: string;
					alt?: string;
				};
			};
		};
	};
}

const { node } = Astro.props;

const { relationTo, value } = node.fields;

const { title, slug, excerpt, featuredImage } = value;
---

<div class="relationship-card">
  {
    featuredImage && (
      <div class="card-image">
        <img src={featuredImage.url} alt={featuredImage.alt || title} />
      </div>
    )
  }
  <div class="card-content">
    <span class="card-collection">{relationTo}</span>
    <h4 class="card-title">{title}</h4>
    {excerpt && <p class="card-excerpt">{excerpt}</p>}
    {
      slug && (
        <a href={`/${relationTo}/${slug}`} class="card-link">
          Read more
        </a>
      )
    }
  </div>
</div>

<style>
  .relationship-card {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 0.5rem;
    border: 1px solid #e9ecef;
  }

  .card-image {
    flex-shrink: 0;
    width: 120px;
    height: 80px;
    border-radius: 0.375rem;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    flex: 1;
    min-width: 0;
  }

  .card-collection {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6c757d;
    background: #e9ecef;
    border-radius: 0.25rem;
  }

  .card-title {
    margin: 0.5rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: #212529;
  }

  .card-excerpt {
    margin: 0 0 0.5rem 0;
    font-size: 0.875rem;
    color: #6c757d;
    line-height: 1.4;
  }

  .card-link {
    font-size: 0.875rem;
    color: #0066cc;
    text-decoration: none;
  }

  .card-link:hover {
    text-decoration: underline;
  }
</style>
