{
  "name": "broken-link-checker",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "tsc": "cross-env NODE_OPTIONS=--no-deprecation tsc --noEmit",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint --max-warnings 0",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload"
  },
  "dependencies": {
    "@payload-bites/broken-link-checker": "workspace:*",
    "@payloadcms/db-postgres": "3.49.1",
    "@payloadcms/next": "3.49.1",
    "@payloadcms/plugin-nested-docs": "3.49.1",
    "@payloadcms/richtext-lexical": "3.49.1",
    "@payloadcms/translations": "3.49.1",
    "@payloadcms/ui": "3.49.1",
    "cross-env": "^7.0.3",
    "next": "^15.4.5",
    "payload": "3.49.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@payload-bites/eslint-config": "workspace:*",
    "@payload-bites/typescript-config": "workspace:*",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "typescript": "^5.8.3"
  }
}
